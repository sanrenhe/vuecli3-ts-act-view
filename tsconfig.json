{
  "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "allowJs": true,
      "noEmit": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitThis": false,
      "sourceMap": false,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      // "downlevelIteration": true,
      "baseUrl": ".",
      "types": ["webpack-env"],
      "paths": {
          "@base/*": ["src/base/*"],
          "@/*": ["src/*"]
      },
      "typeRoots": [
          // "node_modules",
          "types"
      ],
      "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
